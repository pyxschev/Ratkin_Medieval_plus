<Defs>

  <!-- Ratkin Recovery Potion -->
  <ThingDef ParentName="DrugBase">
    <defName>RatkinRecoveryPotion</defName>
    <label>ratkin recovery potion</label>
    <description>A viscous potion glowing with a soft grass-green light, emitting the gentle aroma of sage and licorice. When consumed, it feels like a warm current spreads from the stomach to the limbs, accelerating the body's natural recovery.</description>
    <graphicData>
      <texPath>Things/Item/Drug/GoJuice</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <color>(0.7, 1.0, 0.7)</color>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>35</MarketValue>
      <Mass>0.05</Mass>
    </statBases>
    <techLevel>Medieval</techLevel>
    <ingestible>
      <foodType>Processed, Fluid</foodType>
      <joyKind>Chemical</joyKind>
      <joy>0.40</joy>
      <nurseable>true</nurseable>
      <drugCategory>Medical</drugCategory>
      <ingestSound>Ingest_Drink</ingestSound>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.18,0,0)</offset>
        </northDefault>
      </ingestHoldOffsetStanding>
      <ingestCommandString>Drink {0}</ingestCommandString>
      <ingestReportString>Drinking {0}.</ingestReportString>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>RatkinRecoveryPotionHigh</hediffDef>
          <severity>1.0</severity>
          <toleranceChemical>RatkinRecoveryPotion</toleranceChemical>
        </li>
      </outcomeDoers>
    </ingestible>
    <comps>
