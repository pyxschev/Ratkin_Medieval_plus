<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Sage - 鼠尾草 -->
  <ThingDef ParentName="PlantBase">
    <defName>RatkinPlant_Sage</defName>
    <label>Sage</label>
    <description>A hardy herb with broad, aromatic leaves that emit a distinctive clean fragrance. Commonly used for air purification, cooking seasoning, and as a medicinal ingredient in recovery broths. When burned, it releases a soothing aroma.</description>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/Sage</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1.5, 1.5)</drawSize>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <ingestible />
    <plant>
      <immatureGraphicPath>Things/Plants/Sage_Immature</immatureGraphicPath>
      <dieIfLeafless>true</dieIfLeafless>
      <maxMeshCount>4</maxMeshCount>
      <harvestTag>Standard</harvestTag>
      <!-- <harvestedThingDef>RatkinSage</harvestedThingDef> -->
      <harvestYield>8</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.1</topWindExposure>
      <growDays>12</growDays>
      <visualSizeRange>0.4~1.0</visualSizeRange>
      <wildOrder>2</wildOrder>
      <purpose>Health</purpose>
      <humanFoodPlant>false</humanFoodPlant>
    </plant>
  </ThingDef>

