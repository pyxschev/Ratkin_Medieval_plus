<Defs>

  <!-- 康复药 -->
  <HediffDef>
    <defName>RatkinRecoveryPotionHigh</defName>
    <label>recovery potion effect</label>
    <description>Body pain is leaving me. A soothing warmth spreads through the body, accelerating natural healing.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <isBad>false</isBad>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
      </li>
      <li Class="RkM.HediffCompProperties_giveAfterEffect">
        <hediffDef>RatkinRecoveryPotionHunger</hediffDef>
        <severity>1.0</severity>
      </li>
    </comps>
    <stages>
      <li>
        <minSeverity>0</minSeverity>
        <hungerRateFactorOffset>0.25</hungerRateFactorOffset>
        <statOffsets>
          <InjuryHealingFactor>0.5</InjuryHealingFactor>
          <ImmunityGainSpeed>0.5</ImmunityGainSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>

