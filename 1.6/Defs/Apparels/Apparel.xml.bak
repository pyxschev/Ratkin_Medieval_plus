<!--================= 帝国铠甲 ================-->
     <ThingDef ParentName="ApparelMakeableBase">
    <defName>diguokaijia</defName>
	<label>帝国之花铠甲</label>
    <description>帝国之花铠甲</description>
	<techLevel>Medieval</techLevel>
	<possessionCount>1</possessionCount>
    <recipeMaker>
			<researchPrerequisite>RKFME</researchPrerequisite>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers Inherit="false">
				<li>RK_ElectricTailoringBench</li>
				<li>RK_HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/diguokaijia/diguokaijia</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
	<tradeability>Sellable</tradeability>
  <thingCategories>
      <li>ApparelNoble</li>
  </thingCategories>
  <generateCommonality>1</generateCommonality>
  <costStuffCount>120</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>5800</WorkToMake>
      <Mass>8</Mass>
	  <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
      <StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.20</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
			<MeleeDodgeChance>0.1</MeleeDodgeChance>
		</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/diguokaijia/diguokaijia</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
		<li>Shell</li>
      </layers>
	 <defaultOutfitTags>
	 	<li>Soldier</li>
	 </defaultOutfitTags>
      <tags>
        <li>Royal</li>
      </tags>
    </apparel>
  </ThingDef>
  
<!--================= 帝国帽子 ================-->
 
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>diguomaozi</defName>
    <label>帝国之花羽毛长帽</label>
    <description>鼠族贵族千草·凤尾仙茶定做的蕾丝头饰，她出手向来阔绰，颇有古堡贵人的感觉</description>
	<techLevel>Medieval</techLevel>
	<possessionCount>1</possessionCount>
     <recipeMaker>
			<researchPrerequisite>RKFME</researchPrerequisite>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers Inherit="false">
				<li>RK_ElectricTailoringBench</li>
				<li>RK_HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
	</recipeMaker>
	  <thingCategories>
         <li>ApparelNoble</li>
      </thingCategories>
    <graphicData>
      <texPath>Things/Apparel/diguomaozi/diguomaozi</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <MaxHitPoints>200</MaxHitPoints>
      <Mass>2.5</Mass>
	  <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
	  <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
	  <StuffEffectMultiplierArmor>0.15</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
	  <StuffEffectMultiplierInsulation_Heat>0.15</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>2.0</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	      <PawnBeauty>1</PawnBeauty>
          <SocialImpact>0.1</SocialImpact>
	</equippedStatOffsets>
	<generateCommonality>0.1</generateCommonality>	
  <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <apparel>
	 <renderSkipFlags>
      <li>None</li>
     </renderSkipFlags>
	<countsAsClothingForNudity>false</countsAsClothingForNudity>
	<careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
				<li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/diguomaozi/diguomaozi</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Overhead</li>
      </layers>
	   <defaultOutfitTags>
	   	 <li>Soldier</li>
	   </defaultOutfitTags>
      <tags>
        <li>Royal</li>
      </tags>
    </apparel>
  </ThingDef>  
  
